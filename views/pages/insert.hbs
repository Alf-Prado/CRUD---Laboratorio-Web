<form class="form" action="/" method="post">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" placeholder="Enter a name" id="name" name="name"><br>
     </div>
     <div class="form-group">
        <label for="price">Price:</label>
        <input type="number" class="form-control" placeholder="Enter a price" id="price" name="price"><br>
    </div>
    <div class="form-group">
        <label for="des">Description:</label>
        <input type="text" class="form-control" placeholder="Enter a description" id="des" name="description"><br>
    </div>

     <button type="submit" class="btn btn-default btn-success">Add Product</button>   

</form>